<UserControl x:Class="ModernApp.MVVM.View.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d">

    <StackPanel Orientation="Vertical" Margin="20">
        <TextBlock Text="Lenguaje de Señas"
                   FontSize="28"
                   Foreground="White"
                   Margin="0, 0, 0, 20"
                   HorizontalAlignment="Left" Height="40" />

        <StackPanel Orientation="Horizontal"
                    Margin="0, 0, 0, 20">
            <Border Width="400"
                    Height="200"
                    CornerRadius="10">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,2">
                        <GradientStop Color="BlueViolet" Offset="0.0" />
                        <GradientStop Color="Blue" Offset="1" />
                    </LinearGradientBrush>
                </Border.Background>
                <Grid>
                    <TextBlock Text="Bienvenido al Menú Principal"
                               Foreground="White"
                               FontSize="28"
                               Margin="20, 10, 0, 0"
                               HorizontalAlignment="Left" />

                    <Button Content="Empezar"
        Margin="33,116,200,32"
        Width="150"
        Height="50"
        Background="DodgerBlue"
        Foreground="White"
        FontSize="16"
        FontWeight="Bold"
        HorizontalAlignment="Left"
        VerticalAlignment="Top"
        BorderThickness="0"
        Cursor="Hand" Click="Button_Click_1">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Grid>
                                    <Border Background="{TemplateBinding Background}"
                        CornerRadius="15">
                                        <ContentPresenter HorizontalAlignment="Center"
                                      VerticalAlignment="Center" />
                                    </Border>
                                    <Border x:Name="HoverEffect"
                        Background="#80FFFFFF"
                        CornerRadius="15"
                        Opacity="0">
                                    </Border>
                                </Grid>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="HoverEffect" Property="Opacity" Value="1" />
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                    <Image Width="109"
                           Height="101"
                           Source="/Images/sign_sen.png"
                           HorizontalAlignment="Right"
                           VerticalAlignment="Bottom"
                           Margin="0,0,22,22" />
                </Grid>
            </Border>

            <Border Width="200"
                    Height="121"
                    Margin="40, 0, 0, 0"
                    CornerRadius="10">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,2">
                        <GradientStop Color="Lime" Offset="0.0" />
                        <GradientStop Color="DarkGreen" Offset="1" />
                    </LinearGradientBrush>
                </Border.Background>
                <Image Source="/Images/lenguage.png"
                       Stretch="Uniform"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center" />
            </Border>
        </StackPanel>

        <StackPanel Orientation="Horizontal"
                    Margin="0, 0, 0, 20"
                    HorizontalAlignment="Left">
            <Border Width="150"
                    Height="100"
                    CornerRadius="10"
                    Background="LightBlue"
                    Margin="0, 0, 10, 0">
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                    <TextBlock Text="Precisión"
                               FontSize="16"
                               Foreground="Black"
                               FontWeight="Bold" />
                    <TextBlock x:Name="precision" Text="0.00%"
                               FontSize="14"
                               Foreground="Black"
                               Margin="0, 5, 0, 0" />
                </StackPanel>
            </Border>

            <Border Width="150"
                    Height="100"
                    CornerRadius="10"
                    Background="LightCoral"
                    Margin="0, 0, 10, 0">
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                    <TextBlock Text="Pérdida"
                               FontSize="16"
                               Foreground="Black"
                               FontWeight="Bold" />
                    <TextBlock x:Name="perdida" Text="0.00%"
                               FontSize="14"
                               Foreground="Black"
                               Margin="0, 5, 0, 0" />
                </StackPanel>
            </Border>
            <Border Width="150"
            Height="100"
            CornerRadius="10"
            Background="SkyBlue"
            Margin="0, 0, 10, 0">
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                    <TextBlock Text="Letras Predichas"
                       FontSize="16"
                       Foreground="Black"
                       FontWeight="Bold" />
                    <TextBlock x:Name="nro_letras" Text="0"
                       FontSize="14"
                       Foreground="Black"
                       Margin="0, 5, 0, 0" Width="26" />
                </StackPanel>
            </Border>


            <Border Width="150"
                Height="100"
                CornerRadius="10"
                Background="Aqua"
                Margin="0, 0, 10, 0">
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                    <TextBlock Text="Puedes Consultar"
                           FontSize="16"
                           Foreground="Black"
                           FontWeight="Bold" Width="135" Height="29" />
                    <TextBlock Text="La Guía"
                       FontSize="16"
                       Foreground="Black"
                       FontWeight="Bold" Width="58" Height="27" />
                </StackPanel>
            </Border>

        </StackPanel>
    </StackPanel>
</UserControl>
